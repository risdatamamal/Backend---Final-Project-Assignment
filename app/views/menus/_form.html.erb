<div class="text-center">
  <%= form_with(model: menu) do |form| %>
    <% if menu.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
  
        <ul>
          <% menu.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3 mt-3">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
  
    <div class="mb-3">
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price %>
    </div>
  
    <div class="mb-3">
      <%= form.label :desc, style: "display: block" %>
      <%= form.text_area :desc, maxlength: "150" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :category, style: "display: block" %>
      <%= form.select :category, ["Makanan","Minuman"] %>
    </div>
    
    <div class="mt-3">
      <%= form.submit %>
    </div>
  <% end %>
</div>
