<p style="color: green"><%= notice %></p>

<h1 class="text-center mt-3">Detail Menu</h1>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      <%= button_to "Edit", edit_menu_path(@menu), method: :get, class: "btn btn-primary" %>
    </div>
    <div class="col-4">
      <%= button_to "Menus", menus_path, method: :get, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-center">
    <%= render @menu %>
  </div>
</div>

<div class="text-center">
  <%= button_to "Delete this menu", @menu, method: :delete, class: "btn btn-danger mt-3" %>
</div>
